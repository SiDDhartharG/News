<%- include('header') -%>

    <body>

        <!-- NAVBAR -->
        <%- include('navBar') -%>
            <% var length=categorizedNews.length %>


                <div class="row mt-3 mx-3 border border-danger">
                    <!--main Body-->
                    <%if(length !=0){%>
                        <div class="col-md-8 col-xs-12  ">
                            <div class="row">
                                <% for(var i=0; i < length; i++) { %>
                                    <div class="col-12">
                                        <div class="card my-2 border border-danger">
                                            <div class="row g-0">
                                                <div class="col-sm-4">
                                                    <img src='<%= categorizedNews[i].urlToImage %>'
                                                        style="width: 100%; height: 100%;"
                                                        onerror="this.src='/Image/News.jpg'">
                                                </div>
                                                <div class="col-sm-8">
                                                    <div class="card-body">
                                                        <h5 class="card-title">
                                                            <%= categorizedNews[i].title %>
                                                        </h5>
                                                        <p class="card-text">
                                                            <%= categorizedNews[i].description %>
                                                        </p>
                                                        <p class="card-text"><small class="text-muted">
                                                                <%= categorizedNews[i].publishedAt %>
                                                            </small></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        <%}else{%>
                            <div class="col-md-8 col-xs-12  text-center p-5">
                                <i class='far fa-folder-open' style='font-size:90px'></i><br>
                                <h4><b>No News Find</b></h4>
                            </div>
                            <%}%>
                                <!--topNews-->
                                <div
                                    class="d-none d-md-block col-md-4 border border-danger border-end-0 border-bottom-0 border-top-0">
                                    <div class='text-center bg-danger text-white pb-1'>
                                        <h3><b>Top News</b></h3>
                                    </div>
                                    <% for(var i=0; i < 10; i++) { %>
                                        <a> <b>
                                                <%= headLine[i].title %>
                                            </b> </a>
                                        <% if(i!=9){%>
                                            <hr style="color: red;">
                                            <% }%>
                                                <% } %>
                                </div>
                </div>

    </body>